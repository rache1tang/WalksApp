<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivEditProfileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/etEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivEditProfileImg"
            android:ems="10"
            android:hint="Display Name"
            android:inputType="textPersonName"
            tools:text="Name" />

        <EditText
            android:id="@+id/etEditUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEditName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivEditProfileImg"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            tools:text="Username" />

        <EditText
            android:id="@+id/etEditLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivEditProfileImg"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName"
            tools:text="Location" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/etEditLocation"
            android:layout_marginTop="250dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tvEditTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Your Tags"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEditTags"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/tvEditTags"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnEditSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvEditTags"
            android:layout_marginTop="10dp"
            android:background="#FFE57F"
            android:text="Save" />

        <Button
            android:id="@+id/btnEditLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEditSave"
            android:layout_marginTop="10dp"
            android:background="#FF80AB"
            android:text="Logout" />

    </RelativeLayout>
</ScrollView>